<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <activity
        android:id="@+id/riderMapsActivity"
        android:name="com.harounach.roote.rider.RiderMapsActivity"
        android:label="RiderMapsActivity"
        tool:layout="@layout/activity_rider_maps"
        />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.harounach.roote.login.LoginFragment"
        android:label="fragment_login"
        tool:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.harounach.roote.register.RegisterFragment"
        android:label="fragment_register"
        tool:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>